<!DOCTYPE html>
<html>
<head>
  <title>Teacher Requests</title>
</head>
<body style="
  margin:0;
  padding:0;
  min-height:100vh;
  background: linear-gradient(135deg, #0f172a, #020617);
  font-family: 'Segoe UI', Arial, sans-serif;
  display:flex;
  justify-content:center;
  align-items:center;
">
  <div style="
    width:100%;
    max-width:900px;
    background:#020617;
    padding:35px;
    border-radius:16px;
    box-shadow:0 30px 80px rgba(0,0,0,0.7);
  ">
    <h1 style="
      text-align:center;
      margin-bottom:30px;
      color:#e5e7eb;
      letter-spacing:1px;
    ">
      Teacher Approval Panel
    </h1>
    <% if (teachers.length === 0) { %>
      <p style="
        text-align:center;
        color:#94a3b8;
        font-size:16px;
      ">
        ðŸŽ‰ No pending teacher requests
      </p>
    <% } %>

    <div style="
      display:flex;
      flex-direction:column;
      gap:14px;
    ">
      <% teachers.forEach(t => { %>
        <div style="
          display:flex;
          justify-content:space-between;
          align-items:center;
          padding:18px 22px;
          background:#020617;
          border-left:5px solid #2563eb;
          border-radius:10px;
          box-shadow: inset 0 0 0 1px #1e293b;
          transition:0.3s;
        ">
          <div>
            <div style="
              color:#e5e7eb;
              font-weight:600;
              font-size:16px;
            ">
              <%= t.user.username %>
            </div>
            <div style="
              color:#94a3b8;
              font-size:14px;
              margin-top:4px;
            ">
              <%= t.expertise.join(" â€¢ ") %>
            </div>
          </div>
          <form 
            method="POST" 
            action="/admin/teacher/approve/<%= t._id %>" 
            style="margin:0;"
          >
            <button style="
              padding:10px 18px;
              background: linear-gradient(135deg, #22c55e, #15803d);
              color:#ecfdf5;
              border:none;
              border-radius:8px;
              cursor:pointer;
              font-weight:600;
              letter-spacing:0.5px;
              transition:0.3s;
            "
            onmouseover="this.style.transform='scale(1.05)'"
            onmouseout="this.style.transform='scale(1)'">
              APPROVE
            </button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>


