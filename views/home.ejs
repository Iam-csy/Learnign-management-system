<script>
    document.addEventListener("DOMContentLoaded", () => {
        
        // --- 1. PRELOADER LOGIC ---
        const preloader = document.getElementById('preloader');

        // 2.5 seconds fake loading
        setTimeout(() => {
            if(preloader) {
                preloader.classList.add('loader-hidden');
