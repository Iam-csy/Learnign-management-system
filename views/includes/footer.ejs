<div id="policyModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center hidden">
  <!-- modal content -->
</div>
</footer>
<script>
  function openPolicy(type) {
    const modal = document.getElementById("policyModal");
    modal.classList.remove("hidden");
    modal.classList.add("flex");

    document.querySelectorAll(".policy-page")
      .forEach(p => p.classList.add("hidden"));

    document.getElementById(`policy-${type}`)
      .classList.remove("hidden");

    const titles = {
      terms: "Terms & Conditions",
      privacy: "Privacy Policy",
      cookies: "Cookie Policy",
      refund: "Refund Policy"
    };

    document.getElementById("policyTitle").innerText = titles[type];
  }

  function closePolicy() {
    const modal = document.getElementById("policyModal");
    modal.classList.add("hidden");
    modal.classList.remove("flex");
  }
</script>
<script>
  function openTerms() {
    document.getElementById("policyModal").classList.remove("hidden");
    showPolicy('terms');
  }

  function closeTerms() {
    document.getElementById("policyModal").classList.add("hidden");
  }

  function showPolicy(type) {
    document.querySelectorAll('.policy-page').forEach(p => p.classList.add('hidden'));
    document.getElementById('policy-' + type).classList.remove('hidden');
  }
</script>

  
