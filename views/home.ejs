        // --- 2. MAIN ANIMATION FUNCTION (Wrapper) ---
        // Saara GSAP code is function ke andar hai
        function startSiteAnimations() {
            
            console.log("Animations Started"); // Debugging ke liye

            // --- PARTICLE SYSTEM ---
            const particleContainer = document.getElementById('particles');
            const particleCount = 100; // Performance ke liye thoda kam kiya (500 bahut heavy ho sakta hai)

            if(particleContainer) {
                for (let i = 0; i < particleCount; i++) {
                    let dot = document.createElement('div');
                    dot.classList.add('data-dot');
                    particleContainer.appendChild(dot);
                    
                    let size = Math.random() * 4.5 + 0.5; 
                    dot.style.width = size + 'px';
                    dot.style.height = size + 'px';
                    
                    let startX = (Math.random() - 0.5) * window.innerWidth * 1.5;
                    let startY = (Math.random() - 0.5) * window.innerHeight * 1.5;
                    let startZ = Math.random() * -800 - 200;

                    gsap.set(dot, { x: startX, y: startY, z: startZ, opacity: 0 });

                    // Animation 1: Forward Z
                    gsap.to(dot, {
                        duration: Math.random() * 4 + 3,
                        z: 600,
                        ease: "none",
                        repeat: -1,
                        delay: Math.random() * 5,
                        onRepeat: () => {
                            gsap.set(dot, { 
                                z: Math.random() * -800 - 200,
                                x: (Math.random() - 0.5) * window.innerWidth * 1.5,
                                y: (Math.random() - 0.5) * window.innerHeight * 1.5
                            });
                        }
                    });

                    // Animation 2: Wave Drift
                    const driftRange = Math.random() * 150 + 50;
                    gsap.to(dot, { x: `+=${driftRange}`, duration: Math.random() * 3 + 2, repeat: -1, yoyo: true, ease: "sine.inOut" });
                    gsap.to(dot, { y: `+=${driftRange / 1.5}`, duration: Math.random() * 4 + 2.5, repeat: -1, yoyo: true, ease: "sine.inOut" });

                    // Animation 3: Twinkle
                    gsap.to(dot, { duration: Math.random() * 0.4 + 0.1, opacity: Math.random() * 0.9 + 0.1, repeat: -1, yoyo: true, ease: "steps(3)" });
                }
            }

            // --- TEXT SEQUENCE ---
            const tl = gsap.timeline();

            gsap.set(".char", { z: -1500, opacity: 0, rotationX: 110, scale: 0.5 });
            gsap.set(".hud-corner", { scale: 1.5, opacity: 0 });

            tl.to(".hud-corner", { duration: 1, scale: 1, opacity: 1, ease: "power2.out" })
              .to(".char", {
                  duration: 2, z: 0, opacity: 1, rotationX: 0, scale: 1,
                  ease: "elastic.out(1, 0.6)", stagger: { amount: 0.8, from: "center" }
              }, "-=0.5")
              .to(".char", {
                  duration: 0.1,
                  textShadow: "0 0 40px #fff, 0 0 80px #00f2fe",
                  color: "#fff",
                  "-webkit-text-fill-color": "#fff",
                  repeat: 1, yoyo: true,
                  ease: "steps(10)", stagger: 0.05
              }, "-=1.5")
              .to(".char", {
                  backgroundPosition: "200% center", duration: 3, ease: "none", repeat: -1
              }, "<")
              .to(".tagline-wrapper", { opacity: 1 }, "-=1")
              .to(".cyber-line", { width: "40px", duration: 0.5 })
              .to(".tagline", { 
                  duration: 1, text: "Learning Academy",
                  onStart: function() {
                      const tagEl = document.querySelector('.tagline');
                      if(tagEl) {
                          tagEl.innerText = "LMS INITIALIZED"; 
                          setTimeout(() => tagEl.innerText = "LEARNING SYSTEM ONLINE", 300);
                          setTimeout(() => tagEl.innerText = "ACADEMY", 800);
                      }
                  }
              });

            // --- FLOAT & GLITCH ---
            gsap.to(".hero-content", { y: 20, rotationX: 10, duration: 4, repeat: -1, yoyo: true, ease: "sine.inOut" });

            function triggerGlitch() {
                gsap.to(".codevirus-title", {
                    skewX: -40, duration: 0.09, yoyo: true, repeat: 1, ease: "power4.inOut",
                    onComplete: () => {
                        gsap.set(".codevirus-title", { skewX: 0 });
                        setTimeout(triggerGlitch, Math.random() * 3000 + 1000);
                    }
                });
            }
            setTimeout(triggerGlitch, 4000);
        }
    });
</script>
















